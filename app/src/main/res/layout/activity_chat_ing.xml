<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="5dp">

    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="290dp"
        android:text="U"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/user_image"/>

    <TextView
        android:id="@+id/textViewUserText"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textViewUser"
        android:layout_marginStart="120dp"
        android:background="@drawable/text_background"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewChat"
        android:layout_below="@id/textViewUserText"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/chat_image"/>

    <TextView
        android:id="@+id/textViewChatText"
        android:layout_width="210dp"
        android:layout_below="@id/imageViewChat"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/text_background"
        android:textSize="18sp"
        android:textStyle="bold"/>
</RelativeLayout>